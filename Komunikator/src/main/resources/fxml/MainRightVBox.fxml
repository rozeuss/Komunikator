<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane id="vBoxButtons" hgap="2.0" prefHeight="300.0" stylesheets="@DarkTheme.css" vgap="2.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainRightVBoxController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Button id="vBoxButtons" fx:id="firstButtonVBox" contentDisplay="TOP" mnemonicParsing="false" onAction="#firstButtonVBoxOnAction" prefHeight="200.0" prefWidth="300.0" text="Notifications">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons/notification.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button id="vBoxButtons" fx:id="secondButtonVBox" contentDisplay="TOP" mnemonicParsing="false" onAction="#secondButtonVBoxOnAction" prefHeight="200.0" prefWidth="300.0" text="Archive" GridPane.columnIndex="1">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons/chatting.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button id="vBoxButtons" fx:id="thirdButtonVBox" contentDisplay="TOP" mnemonicParsing="false" onAction="#thirdButtonVBoxOnAction" prefHeight="200.0" prefWidth="300.0" text="Add a friend" GridPane.rowIndex="1">
         <graphic>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons/users.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button id="vBoxButtons" fx:id="fourthButtonVBox" contentDisplay="TOP" mnemonicParsing="false" onAction="#fourthButtonVBoxOnAction" prefHeight="200.0" prefWidth="300.0" text="Your profile" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <graphic>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons/open-book.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
   <padding>
      <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
   </padding>
</GridPane>
